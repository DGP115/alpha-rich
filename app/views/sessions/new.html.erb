<div class="container">
  <h4 class="text-center mt-2">Log In</h4>
</div>

<!--  Use form_with helper to aid with the form for loggin in an existing user . e.g.,
      local :true specifies form_with to use local http and not ajax -->
<div class="container row justify-content-center col-10">

  <!--  1.  A session does not involve the creation of a resource [object] like an article, so
          instead of passing form_with the argument "model", we use "scope" of "session"
      2.  In this case, we need to give Rails the url to use to send the form's data-->
  <%= form_with(scope: :session, url: login_path, local: true,
                class: "shadow p-3 mb-3 bg-grey rounded") do |f| %>

    <div class="form-group row">
      <%= f.label :email_address, class: "col-2 col-form-label" %>
      <div class="col-8">
        <%= f.email_field :email_address, class: "form-control shadow rounded", placeholder: "Enter the email address used to sign up" %>
      </div>
    </div>

    <div class="form-group row mt-2">
      <%= f.label :password, class: "col-2 col-form-label" %>
      <div class="col-9">
        <%= f.password_field :password, class: "form-control shadow rounded" %>
      </div>
    </div>

    <div class="mt-2 text-center">
      <%= f.submit "Log In" %>
    </div>

  <% end %>

</div>

<div class="text-center mt-2 mb-3">
  <%= link_to '[ Cancel and return to articles list ]', articles_path(),
              data: { turbo_method: :index }, class: "text-decoration-none" %>
</div>
